<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ns2:configuration xmlns:ns2="http://www.dabi.com/habitv/configuration/entities">
    <proxies/>
    <osConfig/>
    <downloadConfig>
        <downloadOuput>D:/divx/regular/#TVSHOW_NAME#-#EPISODE_NAME_CUT#.#EXTENSION#</downloadOuput>
        <maxAttempts>5</maxAttempts>
        <demonCheckTime>1800</demonCheckTime>
        <fileNameCutSize>50</fileNameCutSize>
        <downloaders>
            <http/>
            <rtmpdump>bin\rtmpdump.exe</rtmpdump>
            <aria2>bin\aria2c.exe</aria2>
            <curl>bin\curl.exe</curl>
            <ffmpeg>bin\ffmpeg.exe</ffmpeg>
            <youtube>bin\youtube-dl.exe</youtube>
        </downloaders>
    </downloadConfig>
    <updateConfig>
        <updateOnStartup>true</updateOnStartup>
        <autoriseSnapshot>false</autoriseSnapshot>
    </updateConfig>
    <exportConfig>
        <exporters>
            <exporter>
                <condition>
                    <reference>#EXTENSION#</reference>
                    <pattern>.*</pattern>
                </condition>
                <id>mkdir</id>
                <label>Create dir</label>
                <command>cmd /c mkdir "D:\divx\regular\avi\#TVSHOW_NAME#" | echo createdir</command>
                <subexporters/>
            </exporter>
            <exporter>
                <condition>
                    <reference>#EXTENSION#</reference>
                    <pattern>.*</pattern>
                </condition>
                <id>move</id>
                <label>move file</label>
                <command>cmd /c move "D:\divx\regular\#TVSHOW_NAME#-#EPISODE_NAME_CUT#.#EXTENSION#" "D:\divx\regular\avi\#TVSHOW_NAME#\#DATEÂ§yyyyMMdd# - #EPISODE_NAME_CUT#.avi"</command>
                <subexporters/>
            </exporter>
        </exporters>
    </exportConfig>
    <taskDefinition>
        <category>5</category>
        <export>2</export>
        <retreive>50</retreive>
        <search>5</search>
        <download>1</download>
        <curl>2</curl>
        <ffmpeg>1</ffmpeg>
    </taskDefinition>
</ns2:configuration>
