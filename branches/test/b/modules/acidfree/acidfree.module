function mkdir_rec($dir, $mode=0770) {
    if (version_compare(PHP_VERSION, "5.0.0", ">=")) {
        return mkdir($dir, $mode, true);
    } else {
        if (!is_dir(dirname($dir))) {
            if (!mkdir_rec(dirname($dir), $mode))
                return false;
        }
        mkdir($dir, $mode);
    }
    return true;
}
function rmdir_rec($path) {
    $dir = opendir($path);
    while ($file = readdir($dir)) {
        if ($file == '.' || $file == '..')
            continue;
        $filename = "{$path}/{$file}";
        if (is_dir($filename)) {
            rmdir_rec($filename);
        } else {
            unlink($filename);
        }
    }
    closedir($dir);
    return rmdir($path);
}

