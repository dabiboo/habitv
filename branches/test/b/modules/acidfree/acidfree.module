        $output .= '<li>'.t('Images').': '.($node->status?t('Published'):t('Not published')).', '.
            ($node->promoted?t('Promoted'):t('Not promoted')).', '.
            ($node->sticky?t('Sticky'):t('Not sticky')).'. '.
