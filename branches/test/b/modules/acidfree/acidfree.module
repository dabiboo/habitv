function acidfree_fetch_thumb($nid=0) {
    if ($nid == 0 || !($node = acidfree_get_node_by_id($nid))) {
        return drupal_not_found();
    }
    if (!node_access('view', $node)) {
        return drupal_access_denied();
    }
    $file_path = _acidfree_get_thumb_path($node);
    file_transfer($file_path, array('Content-Type: '.acidfree_mime($file_path), 'Content-Length: '. filesize($filepath), 'Content-Disposition: filename=' . basename($file_path)));
}

