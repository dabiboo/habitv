<?xml version="1.0" encoding="UTF-8"?>
<tns:config xmlns:tns="http://www.dabi.com/habitv/config/entities" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dabi.com/habitv/config/entities config.xsd ">
  <!-- <demonTime>10</demonTime> -->
  <workingDir>../builder/pub</workingDir>
  <indexDir>../builder/pub/index</indexDir>
  <providerPluginDir>../builder/pub/provider</providerPluginDir>
  <downloaderPluginDir>../builder/pub/downloader</downloaderPluginDir>
  <exporterPluginDir>../builder/pub/exporter</exporterPluginDir> 
  <downloadOuput>D:/divx/regular/#EPISODE_NAME_NOSCORE#.mp4</downloadOuput>
  <downloader>
    <name>http</name>
    <cmd></cmd>
  </downloader>  
  <downloader>
    <name>rtmpdump</name>
    <cmd>D:\script\habiTv\bin\rtmpdump.exe</cmd>
  </downloader>
  <downloader>
    <name>curl</name>
    <cmd>D:\script\habiTv\bin\curl\curl.exe</cmd>
  </downloader>  
  <exporter>
    <name>ffmpeg</name>
    <output>Re-encoding</output>
    <cmd>ffmpeg -y -i "D:\divx\regular\#EPISODE_NAME_NOSCORE#.mp4" -vtag DIVX -f avi -vcodec mpeg4 -b 2600000 -acodec mp2 -ab 192000 -ar 48000 -ac 2  "D:\divx\regular\#EPISODE_NAME_NOSCORE#.avi"</cmd>
  </exporter>
  <exporter>
    <name>move</name>
    <output>moving</output>
    <cmd>cmd /c move /Y D:\divx\regular\#EPISODE_NAME_NOSCORE#.avi D:\divx\regular\avi</cmd>
  	<exporter>
    	<name>ftp</name>
    	<output>Transferring to freebox</output>
    	<cmd>D:\script\ftp\uploadToFtp.bat #TVSHOW_NAME# D:\divx\regular\avi\#EPISODE_NAME_NOSCORE#.avi</cmd>
  	</exporter>   
  	<exporter>
    	<name>del</name>
    	<output>Deleting</output>
    	<cmd>cmd /c del D:\divx\regular\#EPISODE_NAME_NOSCORE#.mp4</cmd>
  	</exporter>    
  </exporter>    
  <simultaneousChannelDownload>3</simultaneousChannelDownload>
  <simultaneousEpisodeDownload>2</simultaneousEpisodeDownload>
  <simultaneousExport>1</simultaneousExport>
  <timeBetweenLog>3</timeBetweenLog>
  <allDownloadTimeout>3600</allDownloadTimeout>
  <exportTimeout>3600</exportTimeout>
</tns:config>
